<%- include ('partials/header') %>


    <!-- START OF MAIN CONTENT -->

    <% if (locals.logged && locals.logged === "true") { %>
        <div class="alert alert-success text-center" role="alert">
            Welcome to Ali's Kitchen !
        </div>
        <% } %>

    

    <main class="d-flex text-center px-5 mb-5 container-fluid">
        <article class="row g-3 justify-content-center">
            <% for (const oneCategory of category) { %>
            <figure class="col-6 col-md-5 col-xl-4 col-xxl-3 px-4">
                <a href="/category/<%= oneCategory.id %>"><img style="border-radius: 1%; width: 100%; height: 200px; object-fit: cover; box-sizing: border-box;" src="<%= oneCategory.image %>" alt=""></a>
                <div class=""><a class="fs-6 pt-2 ps-3 pe-3 pb-2" style="text-decoration: none; color: inherit; background-color: rgba(238, 210, 176, 0.5);" href="/category/<%= oneCategory.id %>"><%= oneCategory.name %></a>
                </div>
        </figure>
        <% } %>
          
        </article>
    </main>




    <!-- END OF MAIN CONTENT -->

<%- include ('partials/footer') %>